.calendar-table th {
  background-color: #007bff;
  color: white;
  padding: 0.75rem;
}

.calendar-table td {
  height: 100px;
  vertical-align: top;
  border: 1px solid #e0e0e0;
  text-align: left;
  padding: 0.25rem;
}

.date-box {
  text-align: center;
  padding: 0.25rem;
  border-radius: 6px;
}

