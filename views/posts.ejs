        <style>
            .container1 {
            /* text-align: left; */
            max-width: 550px;
            margin: 25px auto;
            background-color: #ffffff;
            padding: 25px 20px 15px 20px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05);
        }

        .video-container {
          margin: 45px auto 12px;
          width: 500px;
          height: 315px;
          border-radius: 15px;
      }
  
      .video-container iframe {
          width: 100%;
          height: 100%;
          border-radius: 15px;
          box-shadow: 2px 2px 15px -2px rgba(0,0,0,.25);
          background-image: var(--period-anime);
      }
      .shorts-container {
        margin: 45px auto 12px;
          width: 315px;
          height: 560px;
          border-radius: 15px;
      }
      .shorts-container iframe {
          width: 100%;
          height: 100%;
          border-radius: 15px;
          box-shadow: 2px 2px 15px -2px rgba(0,0,0,.25);
          background-image: var(--period-anime);
      }
  
      @media (max-width: 600px) {
          .video-container {
              width: 100%;
              height: 175px;
          }
  
          .video-container iframe {
              width: 100%;
              height: 100%;
          }
      }
        </style>



        
