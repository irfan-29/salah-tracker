    <h3 style="text-align: center;">Posts</h3>

  
        <br>
        <!-- <div class="container1"> -->
            <div class="d-flex align-items-center w-95 gap-2" style="margin: 0 4%;">
                <form action="/add-post" method="get">
                    <button type="submit" class="add btn btn-primary">Add Post</button>
                </form>
                <form action="/add-video" method="get">
                    <button type="submit" class="add btn btn-primary">Add Video</button>
                </form>
            </div>
        <!-- </div> -->
        
        
        <div style="width: 90%; margin: auto;">
            <% post.forEach(function(post) { %>
                <% if(post.isVideo) { %>
                    <!-- <div class="container1" style="margin-left: 2px; margin-right: 2px;"> -->
                        <div class="video-container">
                            <iframe width="500" height="315" src="https://www.youtube.com/embed/<%= post.content %>" frameborder="0" allowfullscreen></iframe>
                        </div>
                        <p style="margin-bottom: 3px;"><%= post.reference %></p>
                        <p style="font-size: 14px; color: #888; font-style: italic;"><%= post.postedDate %></p>
                    <!-- </div> -->
                <% }else{ %>
                    <div class="container1">
                        <p style="margin-bottom: 5px;"><%= post.content %></p>
                        <p style="margin-bottom: 9px;">Reference: <%= post.reference %></p>
                        <p style="font-size: 14px; color: #888; font-style: italic;"><%= post.postedDate %></p>
                    </div>
                <% } %>
            <% }); %>

            <!-- <div class="container1" style="margin-left: 2px; margin-right: 2px;"> -->
                        <div class="shorts-container">
                            <iframe width="315" height="560" src="https://youtube.com/embed/MMT9lvEW1HM" frameborder="0" allowfullscreen></iframe>
                        </div>
                        <p style="margin-bottom: 3px;">FurQan</p>
                        <p style="font-size: 15px; color: #888; font-style: italic;">Feb 16, 2026</p>
                    <!-- </div> -->
        
        </div>

